<h2 class="page-header">Listing Messages for <%= current_portal_user.email %></h1>

<table class="table table-striped">
  <tr>
    <th colspan="4">Message</th>
  </tr>

<% @messages.each do |message| %>
  <tr>
    <td><%=h message.message %></td>
    <td><%= link_to 'Show', portal_message_path(message) %></td>
    <td><%= link_to 'Edit', edit_portal_message_path(message) %></td>
    <td><%= link_to 'Delete', portal_message_path(message), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New message', new_portal_message_path %>
