<h1>Editing promotion</h1>

<%= form_for(@promotion) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :message_type %><br />
    <%= f.text_field :message_type %>
  </p>
  <p>
    <%= f.label :message %><br />
    <%= f.text_field :message %>
  </p>
  <p>
    <%= f.label :send_at %><br />
    <%= f.datetime_select :send_at %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @promotion %> |
<%= link_to 'Back', promotions_path %>